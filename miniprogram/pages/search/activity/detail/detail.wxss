/* pages/search/activity/detail/detail.wxss */
page{
  background-color: #fdf6ef;
  padding-bottom: 2em;
}
.con{
  width: 100%;
}
.header{
  width: 100%;
}
.background{
  width: 100%;
  border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10px;
}
.background image{
  border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10px;
}
.mask{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
    border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10px;
}
.back-view{
  display: flex;
  position: fixed;
  top: 0;
  justify-content: flex-start;
  align-items: center;
  z-index: 999;
}
.back-view image{
  width: 64rpx;
  height: 64rpx;
  margin-left: 1em;
}
.content{
  margin-top: 1em;
}
.title{
  color: #fff;
  font-weight: bold;
  position: absolute;
  bottom: 2em;
  left: 1em;
  z-index: 9999;
}
.content{
  width: 100%;
  padding: 0.5em 1em;
  box-sizing: border-box;
}
.c-se{
  display: flex;
  flex-direction: column;
  margin-bottom: 1.5em;
}
.c-se .c-title{
  font-weight: bold;
  color: #1a2a3a;
  margin-bottom: 0.5em;
}
.c-se .c-text{
  color: #6a7a8a;
}
button{
  background-color: #ee4949;
  width: 50%;
  color: #fff;
  border-radius: 100px;
  margin-bottom: 2em;
}
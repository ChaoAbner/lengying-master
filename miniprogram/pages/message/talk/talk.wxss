/* pages/message/talk/talk.wxss */

page {
  background-color: #f4f4f4;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.container {
  height: 80%;
  width: 100%;
  flex-direction: column;
}
/*聊天盒子*/
.scrollwechat {
  width: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  height: 100%;
}
.scrollview{
 height: 100%;
 padding: 0 0.5em;
 box-sizing: border-box;
}
.scrollwechat li {
  width: 100%;
  display: flex;
  margin-top: 20rpx;
}
.mydate{
  display: flex;
  justify-content: center;
  align-items: center;
}
.mydatebox{
  background: #d9d9d9;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 0.4em;
  margin: 0.5em 0;
}
.mydatetext{
  color: #fff;
  font-size: 12px;
}
.container .user {
  /* width: 100%; */
  flex-direction: row;
  /* background-color: red; */
}

.container .sys{
  flex-direction: row-reverse;
}
.feedbackimg image{
   width: 100%;
   height: 300rpx;
}

.headimg {
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
}
.imgview1{
   /* width: 160rpx; */
   display: flex;
   justify-content: flex-end;
}
.imgview2{
   /* width: 160rpx; */
   display: flex;
   justify-content: flex-start;
}
.textview {
  max-width:70%;
  border-radius: 10rpx;
  background: #d5eaf8;
  padding: 20rpx;
  justify-content: flex-end;
}
.triangle image{
  width: 20rpx;
  height: 80rpx;
}
.textview2 {
  max-width:70%;
  background: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  justify-content: flex-start;
}
.link{
  height: 150rpx;
}
.footer {
  width: 96%;
  height: 100rpx;
  padding: 2%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex-wrap: nowrap;
  background: #fff;
}

.footinput {
  flex: 1;
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.footinput image{
  width: 64rpx;
  height: 64rpx;
}

input{
  width: 74%;
  height: 90%;
  /* padding: 0.2em 0.5em; */
  display: flex;
  align-items: center;
  box-sizing: border-box;
  border: 1px solid #f1f1f1;
  border-radius: 10px;
  background-color: #f1f1f1;
  color: #5a6a7a;
}

.foodsend {
  width: 100rpx;
  height: 80rpx;
  display: flex;
  margin: 10rpx;
   background: #17af0f;
   border-radius: 10rpx;
  justify-content: center;
  align-items: center;
}
.send{
  font-size: 14px;
  color: #fff;
}
.footadd {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.addbroder {
  padding: 10rpx;
  border: 1px solid #ccc;
  border-radius: 100rpx;
}

.footadd image {
  width: 50rpx;
  height: 50rpx;
}
.footaddbox{
  height: 200rpx;
  position: fixed;
  bottom: 0;
}
.footaddbox ul{
  display: flex;
  height: 100%;
  flex-direction: row;
}
.footaddbox ul li{
  flex: 1;
  height: 100%;
  font-size: 12px;
  color: #9a9a9a;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.footaddimg{
  border: 1px solid #ccc;
  border-radius: 20rpx;
  margin: 10rpx;
  padding: 30rpx;
}
.footaddtext{
  border: 1px solid #ccc;
  border-radius: 20rpx;
  margin: 10rpx;
  padding: 30rpx;
}
.footaddbox ul li image{
  width: 60rpx;
  height: 60rpx;
}
.tellinput{
  height: 50rpx;
  line-height: 50rpx;
  border: 1px solid #efeff4;
}

.comment-fixed {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  box-shadow: 0 0 2px rgba(0, 0, 0, 0.1);
  z-index: 100;
}

.cf-bg {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background-color: transparent;
  z-index: 99;
}

.cf-box {
  padding: 0.3em 0.5em;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.cf-box image{
  width: 64rpx;
  height: 64rpx;
}

.cf-box textarea{
  display: flex;
  align-items: center;
  border-radius: 10px;
  font-size: 0.9em;
  height: 90%;
  width: 74%;
  background-color: #f2f2f2;
  padding: 0 0.5em;
  box-sizing: border-box;
  color: #5a6a7a;
}

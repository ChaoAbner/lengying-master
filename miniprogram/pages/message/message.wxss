/* pages/message/message.wxss */
.session{
  padding: 0.1em 0 0.5em 0.5em;
  box-sizing: border-box;
  /* background-color: red; */
}
.bg-hui{
  background-color: #f1f1f1;
}
.item{
  display: flex;
  align-items: center;
  margin: 0.6em 0 0.6em 0.4em;
  font-size: 1.1em;
  color: #666;
  position: relative;
  padding-top: 0.5em;
  box-sizing: border-box;
}
.line{
  height: 1px;
  width: 86%;
  background-color: #f1f1f1;
  position: absolute;
  top: 0;
  left: 14%;
}

.item image{
  width: 84rpx;
  height: 84rpx;
  margin-right: 0.9em;
}

.arrow{
  position: absolute;
  right: 0.3em;
}
.notify-num{
  position: absolute;
  font-size: 0.9em;
  right: 3em;
  background-color: red;
  color: #fff;
  width: 1.3em;
  height: 1.3em;
  display: flex;
  align-items: center;
  justify-content: center;
  -webkit-border-radius: 24px;
  border-radius: 24px;
}
.announce-item{
  display: flex;
  align-items: center;
  padding: 0.5em;
  box-sizing: border-box;
  border-top: 1px #f4f4f4 solid;
  position: relative;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.announce-item image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 1em;
}
.flex-column{
  display: flex;
  flex-direction: column;
  width: 80%;
}
.flex-column .username{
  color: #2a3a4a;
  font-weight: bold;
}
.flex-column .time{
  color: #8a9aaa;
  font-size: 0.9em;
}
.flex-column .message{
  width: 95%;
  color: #7a8a9a;
  font-size: 0.9em;
  overflow: hidden;
  text-overflow: ellipsis;
  -ms-text-overflow: ellipsis;
  -o-text-overflow: ellipsis;
  white-space: nowrap;
}
.flex-space-between{
  display: flex;
  justify-content: space-between;
}
.divright{
  position: absolute;
  color: white;
  font-size: 0.9em;
  background-color: red;
  width: 1.5em;
  height: 1.5em;
  line-height: 1.5em;
  right: 1.5em;
  top: 50%;
  text-align: center;
  -webkit-border-radius: 24px;
  border-radius: 24px;
}
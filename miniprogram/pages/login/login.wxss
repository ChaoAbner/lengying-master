/* pages/login/login.wxss */

.header {
    margin: 60rpx 0 50rpx 50rpx;
    border-bottom: 1px solid #ccc;
    text-align: center;
    width: 650rpx;
    height: 300rpx;
    line-height: 450rpx;
}
 
.header image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
}

.title{
  font-size: 1.5em;
  font-weight: bold;
  color: #1a2a3a;
}
 
.content {
    margin-left: 50rpx;
    margin-bottom: 90rpx;
    padding-right: 50rpx;
}
.login-allow{
  width: 100%;
  text-align: center;
  font-size: 0.8em;
  color: #7a8a9a;
}
.login-allow text{
  color: #ee4949;
}
.content text {
    display: block;
    color: #5a6a7a;
    margin-top: 40rpx;
}
 
.bottom {
    border-radius: 80rpx;
    margin: 70rpx auto;
    margin-bottom: 1em;
    width: 50%;
    height: 100rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 1em;
    background-color: #ee4949;
    color: #fff;
}
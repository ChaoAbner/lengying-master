/* pages/preview/preview.wxss */

page{
  background-color:#000;
  }

.bar{
  display: flex;
  position: fixed;
  justify-content: flex-start;
  align-items: center;
  z-index: 999;
}
.bar image{
  width: 40rpx;
  height: 40rpx;
}

.show-img{
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}
.show-img .show{
  width: 100%;
}

.fix{
  width: 100%;
  height: 20%;
  position: fixed;
  bottom: 0;
  flex-direction: column;
  justify-content: flex-start;
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  padding: 0 0.5em;
  box-sizing: border-box;
}

.interact{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.interact image{
  width: 48rpx;
  height: 48rpx;
}

.interact .witget{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.interact .witget view{
  margin: 0.3em 0.5em;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.interact .witget image{
  margin: 0.3em;
}
.interact .witget text{
  font-size: 0.8em;
}
.totop{
  margin: 0.5em 1.3em;
}
.totop image{
  width: 54rpx;
  height: 54rpx;
}

.info{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.text-info text{
  display: block;
}

.title{
  font-size: 1.2em;
  margin: 0 0.5em 0 0.5em;
}
.name{
  margin: 0 0.5em 0 0.5em;
}
.user-info image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 1px solid #fff;
  margin-right: 0.5em;
}
.text-info{
  width: 60%;
}

.img-info{
  background-color: #000;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  color: #fff;
  font-size: 0.8em;
  left: 0;
  padding: 0 0.5em;
  box-sizing: border-box;
  position: absolute;
}

.img-info view{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin: 0.5em;
}

.img-info image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 0.5em;
}

.img-info button{
  width: 40%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

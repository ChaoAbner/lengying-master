/* pages/message/like/like.wxss */
@import "../../../style/no-message.wxss";

.like-item{
  width: 100%;
  display: flex;
  padding: 0.8em 1em 0 0; 
  box-sizing: border-box;
  margin-bottom: 0.8em;
  border-top: 1px #f1f1f1 solid;
}
.l-right{
  width: 75%;
}
.l-left{
  width: 25%;
  display: flex;
  align-items: center;
}
.right-top{
  display: flex;
  align-items: center;
}
.right-top image{
  width: 84rpx;
  height: 84rpx;
  border-radius: 50%;
  margin-right: 1em;
}

.flex-column{
  display: flex;
  flex-direction: column;
}
.flex-column .username{
  color: #1a2a3a;
}
.flex-column .time{
  color: #7a8a9a;
  font-size: 0.9em;
}
.right-bottom{
  display: flex;
  align-items: center;
  margin-top: 0.5em;
  color: #1a2a3a;
}
.right-bottom image{
  margin-left: 0.5em;
  width: 36rpx;
  height: 36rpx;
}

.l-left image{
  width: 100%;
  height: 100%;
  max-height: 160rpx;
  border-radius: 10px;
}
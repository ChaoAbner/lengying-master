/* pages/me/editInfo/editInfo.wxss */
.mask{
  width: 100%;
  background-color: #000;
  opacity: 0.5;
  position: absolute;
  z-index: 9999;
  display: flex;
  justify-content: center;
  align-items: center;
}
action-sheet{
  z-index: 99999;
}

.background{
  width: 100%;
  margin-top: 16px;
  position: relative;
}
.background image{
  width: 100%;
}
.mask image{
  width: 48rpx;
  height: 48rpx;
}
.info{
  margin-bottom: 2em;
  position: relative;
  padding-top: 1em;
  box-sizing: border-box;
}
.info .info-item{
  padding: 1em 1em 0 1em;
  box-sizing: border-box;
}
.info .title{
  font-size: 1.5em;
  margin-bottom: 2em;
  margin-left: 0.5em;
}
.info .info-item{
  display: flex;
  flex-direction: column;
  margin-top: 0.5em;
  padding-top: 0.5em;
  box-sizing: border-box;
  border-top: 1px #f6f6f6 solid;
}
.info .info-item .item-title{
  color: #ccc;
  font-size: 0.9em;
  margin-bottom: 10rpx;
}
.info .info-item input{
  color: #2c2c2c;
}
.info .info-item textarea{
  width: 100%;
  height: 200rpx;
  background-color: #f2f2f2;
  padding: 20rpx;
  box-sizing: border-box
}
.flex-center{
  width: 100%;
  justify-content: center;
  align-items: center
}
.flex-center button{
  background-color: #d52349;
  color: #fff;
  width: 60%;
}
.picker{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.picker image{
  width: 32rpx;
  height: 32rpx;
}
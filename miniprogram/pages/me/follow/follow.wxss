/* pages/me/follow/follow.wxss */
.sub-item{
  display: flex;
  align-items: center;
  margin: 0.8em 0;
  padding-top: 0.8em;
  box-sizing: border-box;
  justify-content: space-between;
  border-top: 1px solid #f4f4f4;
}
.sub-item image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 1em;
}
.flex-row{
  display: flex;
  justify-content: flex-start;
  align-items: center; 
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  -ms-text-overflow: ellipsis;
  -o-text-overflow: ellipsis;
}
.flex-column{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start; 
  color: #2a3a4a;
}
.flex-column text:last-of-type{
  font-size: 0.9em;
  color: #999;
}
.subed{
  padding: 5rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  color: #d52349;
  background-color: #fff;
  border: 1px solid #d52349;
}
.sub{
  padding: 5rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  color: #fff;
  background-color: #d52349;
  border: 1px solid #d52349;
}
.no-data{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #ccc;
}
.no-data image{
  width: 400rpx;
  height: 400rpx;
}